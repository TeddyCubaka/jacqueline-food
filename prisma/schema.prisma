model Command {
  id         String @id @unique @default(uuid())
  total      Float
  clientId   String
  currencyId String

  status   String
  isClosed String

  updateBy  String?
  createBy  String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  isDeleted Boolean?  @default(false)

  client   Currency         @relation(fields: [clientId], references: [id])
  currency ProductCategory? @relation(fields: [currencyId], references: [id])

  lines CommandLine[]
}

model CommandLine {
  id        String @id @unique @default(uuid())
  commandId String
  productId String
  quantity  String

  updateBy  String?
  createBy  String?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  isDeleted Boolean?  @default(false)

  command Command @relation(fields: [commandId], references: [id])
  Product Product @relation(fields: [productId], references: [id])
}
